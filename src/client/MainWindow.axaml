<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="800" d:DesignHeight="450"
        x:Class="client.MainWindow"
        Title="API Data Fetch Example">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Drag and Drop and File Dialog Button -->
            <Button Name="ChooseFileButton" Content="Choose File" Click="ChooseFileButton_Click"/>
            <TextBlock Name="DragDropText" Text="Drag and drop a file here" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" />

            <!-- Container with switch button and search button -->
            <StackPanel Orientation="Horizontal" Margin="20">
                <ToggleSwitch Name="SearchAlgorithmSwitch" Content="BM / KMP" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <Button Name="SearchButton" Content="Search" Margin="10,0,0,0" Click="SearchButton_Click"/>
            </StackPanel>

            <!-- Text block for displaying API data -->
            <TextBlock Name="ApiDataText" Text="Fetching data..." FontSize="20" />
        </StackPanel>
    </Grid>
</Window>
